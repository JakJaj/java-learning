<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>


<?import javafx.scene.layout.GridPane?>
<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ToDoList.DialogController">
    <content>
        <GridPane vgap="10" hgap="10">
            <Label text="Short Description:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="shortDescription" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Details:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextArea fx:id="details" GridPane.rowIndex="1" GridPane.columnIndex="1" prefHeight="150" prefWidth="300" wrapText="true"/>

            <Label text="Deadline:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <DatePicker fx:id="deadline" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        </GridPane>
    </content>

</DialogPane>
